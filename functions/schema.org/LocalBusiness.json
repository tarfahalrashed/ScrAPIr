		"openingHours": {"$ref": "Duration.json#/definitions/possibleRef"},
		"paymentAccepted": {
			"type": "array",
			"items": {"$ref": "#/definitions/paymentAccepted"}
		},
		"priceRange": {"$ref": "#/definitions/priceRange"}
	},
	"definitions": {
		"array": {
			"type": "array",
			"items": {"$ref": "#"}
		},
		"possibleRef": {
			"oneOf": [
				{"$ref": "#"},
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				}
			]
		},
		"possibleRefArray": {
			"oneOf": [
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				},
				{
					"type": "array",
					"items": {"$ref": "#/definitions/possibleRef"}
				}
			]
		},
		"currenciesAccepted": {
			"title": "Currencies Accepted",
			"description": "The currency accepted (in ISO 4217 currency format).",
			"type": "string"
		},
		"paymentAccepted": {
			"title": "Payment Accepted",
			"description": "Cash, credit card, etc.",
			"type": "string"
		},
		"priceRange": {
			"title": "Price Range",
			"description": "The price range of the business, for example $$$.",
			"type": "string"
		}
