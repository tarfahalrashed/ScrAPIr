{
	"id": "UserComments.json",
	"title": "User Comments",
	"format": "http://schema.org/UserComments",
	"media": {"type": "application/json;profile=http://schema.org/UserComments"},
	"allOf": [{"$ref": "UserInteraction.json"}],
	"type": "object",
	"properties": {
		"commentText": {"$ref": "#/definitions/commentText"},
		"commentTime": {"$ref": "#/definitions/commentTime"},
		"creator": {"$ref": "#/definitions/creator"},
		"discusses": {"$ref": "CreativeWork.json#/definitions/possibleRef"},
		"replyToUrl": {
			"type": "string",
			"format": "uri"
		}
	},
	"links": [{
		"rel": "http://schema.org/replyToUrl",
		"href": "{+replyToUrl}"
	}],
	"definitions": {
		"array": {
			"type": "array",
			"items": {"$ref": "#"}
		},
		"possibleRef": {
			"oneOf": [
				{"$ref": "#"},
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				}
			]
		},
		"possibleRefArray": {
			"oneOf": [
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				},
				{
					"type": "array",
					"items": {"$ref": "#/definitions/possibleRef"}
				}
			]
		},
		"commentText": {
			"title": "Comment Text",
			"description": "The text of the UserComment.",
			"type": "string"
		},
		"commentTime": {
			"title": "Comment Time",
			"description": "The time at which the UserComment was made.",
			"type": "string",
			"format": "date"
		},
		"creator": {
			"title": "Creator",
			"description": "The creator/author of this CreativeWork or UserComments. This is the same as the Author property for CreativeWork.",
			"anyOf": [{"$ref": "Organization.json#/definitions/possibleRef"}, {"$ref": "Person.json#/definitions/possibleRef"}]
		}
	}
}